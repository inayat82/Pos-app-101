{
  "version": 2,
  "framework": "nextjs",
  "buildCommand": "npm run build",
  "installCommand": "npm install",
  "devCommand": "npm run dev",
  "functions": {
    "pages/api/**/*.js": {
      "maxDuration": 30
    },
    "pages/api/**/*.ts": {
      "maxDuration": 30
    },
    "app/api/cron/**/*.ts": {
      "maxDuration": 300
    }
  },  "crons": [
    {
      "path": "/api/cron/takealot-hourly-30day-sales",
      "schedule": "0 * * * *"
    },
    {
      "path": "/api/cron/takealot-nightly-sales",
      "schedule": "0 1 * * *"
    },
    {
      "path": "/api/cron/takealot-weekly-6month-sales",
      "schedule": "0 2 * * 0"
    },
    {
      "path": "/api/cron/takealot-hourly-100-products",
      "schedule": "0 */2 * * *"
    },
    {
      "path": "/api/cron/takealot-6hourly-all-products",
      "schedule": "0 */6 * * *"
    },
    {
      "path": "/api/cron/takealot-12hourly-all-products",
      "schedule": "0 */12 * * *"
    },
    {
      "path": "/api/cron/calculate-product-metrics",
      "schedule": "0 4 * * *"
    },
    {
      "path": "/api/cron/cleanup-old-logs",
      "schedule": "0 3 * * 0"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}
